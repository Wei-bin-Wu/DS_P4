<div>
    <h2>Log In</h2>
    <%= form_tag '/login' do %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        Email: <%= text_field_tag :email %><br>
        Password: <%= text_field_tag :pass %><br>
        Rol: <%= text_field_tag :rol %>
        <%= submit_tag "Log In" %>
    <% end %>
</div>