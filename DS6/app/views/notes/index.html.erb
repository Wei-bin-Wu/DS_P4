<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table id="tabla">
  <thead>
    <tr>
      <th>Student</th>
      <th>Exam</th>
      <th>Note</th>
      <th>Photo</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.student.name + " " + note.student.surname %></td>
        <td><%= note.exam.name %></td>
        <td><%= note.note %></td>
        <td><%= link_to 'Descargar foto', asset_path(note.photo)  %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
